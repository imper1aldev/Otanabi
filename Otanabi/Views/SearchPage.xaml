<Page
    x:Class="Otanabi.Views.SearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactions="using:Microsoft.Xaml.Interactions.Core"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid RowSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <AutoSuggestBox
                Grid.Row="0"
                Grid.Column="0"
                Height="50"
                Margin="0,0,0,0"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                AllowFocusOnInteraction="True"
                PlaceholderText="Search... (press Enter to search) "
                QueryIcon="Find"
                QuerySubmitted="{x:Bind ViewModel.OnSearch}">
                <AutoSuggestBox.Resources>
                    <x:Double x:Key="AutoSuggestBoxIconFontSize">20</x:Double>
                </AutoSuggestBox.Resources>
            </AutoSuggestBox>


            <Grid Grid.Row="1" ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />

                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Genres" />
                    <Button
                        HorizontalAlignment="Stretch"
                        AllowFocusOnInteraction="True"
                        Content="{x:Bind ViewModel.GetSelectedGenres, Mode=OneWay}">
                        <Button.Flyout>
                            <Flyout AllowFocusOnInteraction="True">
                                <ListView
                                    x:Name="SelectorGenres"
                                    AllowFocusOnInteraction="True"
                                    ItemsSource="{x:Bind ViewModel.Genres, Mode=OneWay}"
                                    SelectionChanged="SelectorGenres_SelectionChanged"
                                    SelectionMode="Multiple" />
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Vertical">
                    <TextBlock Text="Year" />
                    <ComboBox
                        Width="auto"
                        HorizontalAlignment="Stretch"
                        AllowFocusOnInteraction="True"
                        ItemsSource="{x:Bind ViewModel.Years, Mode=OneTime}"
                        SelectedItem="{x:Bind ViewModel.SelectedYear, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Vertical">
                    <TextBlock Text="Season" />
                    <ComboBox
                        HorizontalAlignment="Stretch"
                        AllowFocusOnInteraction="True"
                        ItemsSource="{x:Bind ViewModel.Seasons, Mode=OneWay}"
                        SelectedItem="{x:Bind ViewModel.SelectedSeason, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Grid.Column="3" Orientation="Vertical">
                    <TextBlock Text="Format" />
                    <Button
                        HorizontalAlignment="Stretch"
                        AllowFocusOnInteraction="True"
                        Content="{x:Bind ViewModel.GetSelectedFormats, Mode=OneWay}">
                        <Button.Flyout>
                            <Flyout AllowFocusOnInteraction="True">
                                <ListView
                                    x:Name="SelectorFormats"
                                    AllowFocusOnInteraction="True"
                                    ItemsSource="{x:Bind ViewModel.Formats, Mode=OneWay}"
                                    SelectionChanged="SelectorFormats_SelectionChanged"
                                    SelectionMode="Multiple" />
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Column="4" Orientation="Vertical">
                    <TextBlock Text="Airing Status" />
                    <ComboBox
                        HorizontalAlignment="Stretch"
                        AllowFocusOnInteraction="True"
                        ItemsSource="{x:Bind ViewModel.Statuses, Mode=OneWay}"
                        SelectedItem="{x:Bind ViewModel.SelectedStatus, Mode=TwoWay}" />
                </StackPanel>
            </Grid>

        </Grid>

    </Grid>
</Page>

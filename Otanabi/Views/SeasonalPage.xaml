<Page
    x:Class="Otanabi.Views.SeasonalPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactions="using:Microsoft.Xaml.Interactions.Core"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:localconverters="using:Otanabi.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:usercontrols="using:Otanabi.UserControls"
    Loaded="Page_Loaded"
    mc:Ignorable="d">
    <Grid x:Name="ContentArea">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">

            <SelectorBar x:Name="SelectorSeason" SelectedItem="{x:Bind ViewModel.SelectedSeasonBar, Mode=TwoWay}">
                <interactivity:Interaction.Behaviors>
                    <interactions:EventTriggerBehavior EventName="SelectionChanged">
                        <interactions:InvokeCommandAction Command="{x:Bind ViewModel.SeasonChangedCommand}" />
                    </interactions:EventTriggerBehavior>
                </interactivity:Interaction.Behaviors>
                <SelectorBarItem x:Name="SelectorSpring" Text="Spring" />
                <SelectorBarItem x:Name="SelectorSummer" Text="Summer" />
                <SelectorBarItem x:Name="SelectorFall" Text="Fall" />
                <SelectorBarItem x:Name="SelectorWinter" Text="Winter" />
            </SelectorBar>
            <ComboBox
                Margin="50,8,0,0"
                ItemsSource="{x:Bind ViewModel.years}"
                SelectedItem="{x:Bind ViewModel.SelectedYear, Mode=OneWay}" />
            <Button Command="{x:Bind ViewModel.testCommand}" Content="Test" />
        </StackPanel>
        <usercontrols:AnimeDetailCollectionControl
            x:Name="AnimeGrid"
            Grid.Row="1"
            Margin="0,12,0,12"
            HorizontalAlignment="Center"
            ItemsSource="{x:Bind ViewModel.AnimeList, Mode=OneWay}" />
    </Grid>
</Page>
